{
  "name": "ghost-custom-services",
  "version": "0.1.0",
  "main": "src/index.ts",
  "description": "Set of ghost custom services such as : Sendgrid parse email, Share on Twitter and Share on Linkedin",
  "scripts": {
    "build": "rm -rf dist/ && ./node_modules/.bin/tsc",
    "build:docker": "docker-compose build",
    "lint": "eslint src/* --ext .ts",
    "service": "nodemon",
    "service:debug": "nodemon --debug src/index.ts",
    "docker:debug": "docker-compose -f docker-compose-dev.yml up -d",
    "docker": "docker-compose -f docker-compose-dev.yml up",
    "start": "node dist/index.js"
  },
  "author": "Daniel Candia <danfercf@gmail.com>",
  "license": "APACHE-2.0",
  "dependencies": {
    "@sendgrid/client": "^7.6.0",
    "@sendgrid/mail": "^7.6.0",
    "axios": "^0.23.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.11",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "qs": "^6.10.2",
    "twitter-api-v2": "^1.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.0",
    "@types/nodemailer-sendgrid": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^1.8.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
